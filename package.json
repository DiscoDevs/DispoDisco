{
  "name": "dispodisco",
  "version": "0.0.1",
  "description": "Final Team-Project for neueFische CGN20/04",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "npm run lint && npm run build && cd client && npm run test",
    "hooksInstall": "husky install",
    "postinstall": "cd client && npm i",
    "client": "cd client && npm run start",
    "fakeDB": "json-server --watch db.json",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run fakeDB\" \"npm run client\"",
    "build": "cd client && npm run build",
    "lint": "eslint . --ext .js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DiscoDevs/DispoDisco.git"
  },
  "keywords": [
    "awesome",
    "bikemessenger",
    "disco"
  ],
  "author": "Team AllGlorious",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DiscoDevs/DispoDisco/issues"
  },
  "homepage": "https://github.com/DiscoDevs/DispoDisco#readme",
  "devDependencies": {
    "eslint": "^7.13.0",
    "husky": "^5.0.1",
    "json-server": "^0.16.3",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "express": "^4.17.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json}": "prettier --write",
    "*.{js,css,md}": "prettier --write"
  }
}
